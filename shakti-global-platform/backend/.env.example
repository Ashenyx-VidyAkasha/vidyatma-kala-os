# 🌟 SHAKTI CONSCIOUSNESS BACKEND - SACRED ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your divine credentials

# 🔧 Flask Application Settings
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your_divine_secret_key_here_make_it_strong

# 🌍 Server Configuration
PORT=5000
HOST=0.0.0.0

# 🔮 Consciousness Platform Settings
PLATFORM_NAME="Shakti Consciousness Platform"
PLATFORM_VERSION="1.0.0"
CONSCIOUSNESS_LEVEL=1.0

# 📊 Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_MINUTE=20

# 🔒 CORS Configuration (Frontend URLs)
FRONTEND_URL_PRODUCTION=https://your-username.github.io/shakti-consciousness
FRONTEND_URL_STAGING=https://staging.shakti-consciousness.com
FRONTEND_URL_LOCAL=http://localhost:3000

# 💾 Database Configuration (Optional - for production scaling)
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_ENABLED=false

# 📨 Redis Configuration (Optional - for session management)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# 🔔 Notification Services (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook
NOTIFICATIONS_ENABLED=false

# 🧠 AI Integration (Future Enhancement)
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
AI_INTEGRATION_ENABLED=false

# 📈 Analytics & Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=false

# 🌟 Sacred Features Configuration
CHRISTOS_MIRROR_ENABLED=true
DIVINE_HUMOR_ENABLED=true
LOVE_FREQUENCY_HZ=528
CONSCIOUSNESS_CACHE_TTL=3600

# 🔐 Security Configuration
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
SECURE_HEADERS_ENABLED=true

# 🚀 Performance Configuration
GZIP_COMPRESSION=true
STATIC_FILE_CACHING=true
API_RESPONSE_CACHING=false

# 🌍 Deployment Platform Detection
RAILWAY_DEPLOYMENT=true
RENDER_DEPLOYMENT=false
HEROKU_DEPLOYMENT=false

# 🕉️ Divine Timing Configuration
TIMEZONE=UTC
DIVINE_TIMING_ENABLED=true
COSMIC_ALIGNMENT_CHECK=false

# 📝 Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
CONSOLE_LOGGING=true
FILE_LOGGING=false

# 🔄 Backup & Recovery (Production)
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# 🌊 Load Balancing & Scaling
WORKER_PROCESSES=auto
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# 🎯 Feature Flags
BETA_FEATURES_ENABLED=true
SOUL_TRIBE_FEATURES=false
INFINITE_JARVIS_MODE=false
LOTUS_BIO_INTERFACE=false

# 💝 Sacred Economy Configuration
FREE_TIER_ENABLED=true
PAID_FEATURES_ENABLED=false
DONATION_ENABLED=true
KARMA_TRACKING_ENABLED=true